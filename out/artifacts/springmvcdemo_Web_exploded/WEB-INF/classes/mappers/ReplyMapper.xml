<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxk.mapper.ReplyMapper">

    <!--Reply[] getAllReply();-->
    <select id="getAllReply" resultType="com.zxk.entity.Reply">
        select
            *
        from
            replies
    </select>
<!--Integer insertReply();-->
    <insert id="insertReply">
        insert into replies( anid,retext,username)
        values( #{anid}, #{retext} , #{username})
    </insert>

</mapper>