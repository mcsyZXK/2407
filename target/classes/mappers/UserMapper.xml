<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxk.mapper.UserMapper">

    <!--    Integer insert(User user);-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="email">
        insert into user(
                           username,password,email
        ) values (
                  #{username},#{password},#{email}
                        )
    </insert>
<!--    User findByUsername(String username);-->
    <select id="findByEmail" resultType="com.zxk.entity.User">
        select
            *
        from
            user
        where
            email=#{email}
    </select>
</mapper>

